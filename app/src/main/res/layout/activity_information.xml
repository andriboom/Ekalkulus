<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mainmenu"
    tools:context=".InformationActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_custom"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_learning"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/materi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Materi"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kd3"
                        android:layout_marginTop="30dp"
                        android:text="Materi merupakan fitur untuk membaca materi-materi tentang Kalkulus dan Arsitektur &amp; Organisasi Komputer"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_test"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/latihan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Latihan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kd3"
                        android:layout_marginTop="30dp"
                        android:text="Latihan merupakan fitur kumpulan soal"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_bantuan"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/bantuan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Bantuan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kd3"
                        android:layout_marginTop="30dp"
                        android:text="Fitur bantuan merupakan fitur yang menyediakan informasi mengenai aplikasi E-Learning"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_tentang"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/tentang"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Tentang"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Tentang merupakan fitur informasi pengembangan aplikasi E-Learning"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,UnknownIdInLayout" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>