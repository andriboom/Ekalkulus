<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_about"
    tools:context=".AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/pengembang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Pengembang :"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/pengembang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_alignTop="@+id/pengembang"
            android:text="Andri Setyawan"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/pengembang2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignTop="@+id/pengembang1"
            android:text="Gandis Helen Karamoy"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/dlearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="475dp"
            android:text="E - LEARNING"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_alignTop="@+id/dlearning"
            android:text="App Version 1.0"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/prodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignTop="@+id/version"
            android:text="Prodi Teknik Informatika"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/jurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignTop="@+id/prodi"
            android:text="Jurusan Teknik Elektro"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/um"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignTop="@+id/jurusan"
            android:text="Universitas Negeri Malang"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>